<table cellpadding="0" cellspacing="0">
  <tr>
    <td class="item_title"><%= link_to(h(store_item.headline), store_item) %>
    <% if admin_logged_in? %>
      - <%= link_to 'Edit', edit_promotion_path(store_item) %>
      <%= link_to 'Remove', store_item, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>

    </td>
  </tr>
  <tr>
    <td class="item_description"><%= h(store_item.description) %></td>
  </tr>
  <tr>
    <% unless store_item.start_date.nil? && store_item.end_date.nil? -%>
    <td class="item_date">
        <%= store_item.format_dates %>
    </td>
    <% end -%>
  </tr>
</table>

