
<% form_for(@merchant,  :html => { :multipart => true }) do |f| %>

<%= f.error_messages %>
<table>

  <tr>
    <td class="label">Name:</td>
    <td><%= f.text_field :name, :class => 'inputtext'  %></td>
  </tr>

  <tr>
    <td class="label">Web Site:</td>
    <td><%= f.text_field :web_site, :class => 'inputtext'  %></td>
  </tr>

  <tr>
    <td class="label">Description</td>
    <td><%= f.text_area :description, :class=>'inputtextarea'  %></td>
  </tr>

  <tr>
    <td class="label">Logo:</td>
    <td><%=  image_tag( @merchant.logo.url, :size => '50x50') %><br/><%= f.file_field :logo, :class => 'inputtext' %></td>
  </tr>

  <tr>
    <td class="label">Categories:</td>
    <td>
      <%= render(
          :partial => '/categories/checklist',
          :locals => {
            :categories => @merchant.categories,
            :field_name => 'merchant[category_ids][]',
            :uncheck_all => true
            })
      %>
    </td>
  </tr>

</table>

  <p>
    <%= submit_tags(:cancel_url => @merchant.new_record? ? merchants_path : merchant_path(@merchant)) %>
  </p>
<% end %>
