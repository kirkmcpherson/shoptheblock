<h1><% if @press_release.url %>
                        <%= link_to(h(@press_release.title), @press_release.url, :target => '_blank')  %>
                  <% else %>
                        <%= h(@press_release.title) %>
                  <% end %>
</h1>

<div><%= h @press_release.publication_date.strftime("%B %d, %Y") %></div>
<div><%= h @press_release.publication %></div>


<p><%= simple_format @press_release.article %></p>
