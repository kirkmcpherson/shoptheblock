<table cellpadding="0" cellspacing="0">
    <tr><td class="item_title"><%= link_to(item.title, item) %></td></tr>
    <tr><td class="item_date"><%
        concat(h(item.start_time.strftime('%b %d %I:%M%p - ')))

        if ((item.start_time.year == item.end_time.year) and (item.start_time.month == item.end_time.month) and (item.start_time.day == item.end_time.day))
            concat(h(item.end_time.strftime('%I:%M%p')))
        else
            concat(h(item.end_time.strftime('%b %d %I:%M%p')))
        end
        
    %></td></tr>
    <tr><td class="item_description"><%= h(item.description) %></td></tr>
</table>
<% javascript_tag do -%>
  Google_AddMarker(<%= item.lat %>, <%= item.lng %>, 'news');
<% end -%>
